<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="30dp"
    app:contentPadding="10dp">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content" >

      <de.hdodenhof.circleimageview.CircleImageView
          android:layout_width="80dp"
          android:layout_height="100dp"
          app:civ_border_color="@color/black"
          android:src="@drawable/exp_event"
          android:id="@+id/event_item_imgEvent" />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toLeftOf="@id/event_item_desc_arrow"
          android:layout_toRightOf="@id/event_item_imgEvent"
          android:orientation="vertical">

          <TextView
              android:id="@+id/event_item_txtTitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="5dp"
              android:textColor="@color/black"
              android:textSize="17sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/event_item_txtDate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="5dp"
              android:textColor="@color/black"
              android:textSize="17sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/event_item_txtPlace"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="5dp"
              android:textColor="@color/black"
              android:textSize="17sp"
              android:textStyle="bold" />
      </LinearLayout>

      <ImageView
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:src="@drawable/ic_description_arrow"
          android:layout_alignParentRight="true"
          android:layout_alignParentEnd="true"
          android:layout_centerVertical="true"
          android:id="@+id/event_item_desc_arrow"/>



  </RelativeLayout>

</androidx.cardview.widget.CardView>